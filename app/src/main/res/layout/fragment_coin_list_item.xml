<?xml version="1.0" encoding="utf-8"?>
<!--


                    Този XML е за АДАПТЕРА !!!

                    Ще се използва за шаблон, по който
                    да се inflate-не fragment_coin_list.xml (там е RecyclerView-то)

                    Reusable xml, който ще се използва в RecyclerView,
                    за да показва ВСИЧКИ криптовалути.



 -->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="?android:attr/selectableItemBackground">

        <TextView android:id="@+id/rankTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:textColor="@color/colorPrimary"
            android:textSize="15sp"
            tools:text="1"/>

        <ImageView android:id="@+id/iconImageView"
            android:layout_width="26dp"
            android:layout_height="29dp"
            android:padding="3dp"
            android:scaleType="centerInside"
            android:contentDescription="icon"
            tools:src="@mipmap/ic_launcher"/>

        <TextView android:id="@+id/nameTextView"
            android:layout_width="145dp"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:textSize="15sp"
            android:paddingLeft="4dp"
            tools:text="BitCoin"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView android:id="@+id/priceTextView"
                android:gravity="end"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:textColor="@color/colorPrimary"
                android:textSize="15sp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                tools:text="$ 4576.52"/>

            <TextView android:id="@+id/percentChangeTextView"
                android:gravity="end"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:layout_weight="0.5"
                android:textSize="15sp"
                tools:text="+0.32%"/>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
